{
  "name": "ganbarometer-svelte",
  "version": "0.0.1",
  "description": "Svelte version of the GanbarOmeter for Wanikani",
  "author": "Rex Walters -- rw [at] pobox.com",
  "homepage": "https://github.com/wrex/ganbarometer-svelte#readme",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest src",
    "test:watch": "npm run test -- --watch",
    "check": "svelte-check --tsconfig ./tsconfig.json"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-typescript": "^7.15.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-typescript": "^8.0.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/svelte": "^3.0.3",
    "@tsconfig/svelte": "^2.0.1",
    "@types/jest": "^27.0.2",
    "@types/tampermonkey": "^4.0.0",
    "babel-jest": "^27.3.1",
    "jest": "^27.3.1",
    "magic-string": "^0.25.7",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.0",
    "rollup-plugin-userscript-metablock": "^0.3.1",
    "svelte": "^3.38.2",
    "svelte-check": "^2.1.0",
    "svelte-jester": "^2.1.5",
    "svelte-preprocess": "^4.7.3",
    "tslib": "^2.0.0",
    "typescript": "^4.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.svelte$": [
        "svelte-jester",
        {
          "preprocess": true
        }
      ]
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "svelte"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ]
  }
}
